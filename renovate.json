{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:disable"
  ],
  "constraints": {
    "python": "==3.10"
  },
  "automerge": false,
  "baseBranches": ["develop"],
  "pip-compile": {
    "fileMatch": ["requirements.in", "requirements_dev.in"]
  },
  "pip_requirements": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "pip-compile-refresh",
    "commitMessageAction": "Refresh pip-compile outputs"
  },
  "packageRules": [
    {
      "matchManagers": ["pip-compile"],
      "excludeDepNames": [
        "gdal",
        "django-bootstrap-datepicker-plus"
      ]
    }
  ]
}
